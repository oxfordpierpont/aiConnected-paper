# Production Environment Configuration for Paper by aiConnected
# Copy this file to .env and fill in your production values
# IMPORTANT: Never commit the actual .env file to version control!

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=paper.aiconnected.com
ACME_EMAIL=admin@aiconnected.com

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=paper_user
POSTGRES_PASSWORD=<generate-strong-password-here>
POSTGRES_DB=content_strategist

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=<generate-strong-password-here>

# =============================================================================
# APPLICATION SECRETS
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=<generate-64-character-hex-string>
JWT_SECRET_KEY=<generate-64-character-hex-string>

# =============================================================================
# EXTERNAL API KEYS (OpenRouter)
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-...
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-sonnet-4
FREEPIK_API_KEY=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["https://paper.aiconnected.com","https://www.paper.aiconnected.com"]

# =============================================================================
# FRONTEND URLs (used at build time)
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.paper.aiconnected.com
NEXT_PUBLIC_WS_URL=wss://api.paper.aiconnected.com

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_TYPE=local
# For S3 storage:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=paper-documents
# AWS_S3_REGION=us-east-1

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
