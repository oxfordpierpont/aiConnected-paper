# Environment Configuration for Paper by aiConnected
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=content_strategist

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# APPLICATION SECRETS (generate with: openssl rand -hex 32)
# =============================================================================
SECRET_KEY=your-64-character-hex-string-here
JWT_SECRET_KEY=your-64-character-hex-string-here

# =============================================================================
# OPENROUTER API
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# =============================================================================
# OPTIONAL APIs
# =============================================================================
FREEPIK_API_KEY=

# =============================================================================
# FRONTEND URLs (used at build time)
# IMPORTANT: NEXT_PUBLIC_API_URL should NOT include /api suffix
# The API client adds /api/v1 automatically
# =============================================================================
NEXT_PUBLIC_API_URL=https://paper.aiconnected.ai
NEXT_PUBLIC_WS_URL=wss://paper.aiconnected.ai

# =============================================================================
# CORS (JSON array of allowed origins)
# =============================================================================
CORS_ORIGINS=["https://paper.aiconnected.ai"]

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
