# Docker Environment Configuration (Development)
# Copy this file to .env

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=content_strategist

# Backend Secrets (32+ characters required)
SECRET_KEY=devsecretkey32charactersminimum!
JWT_SECRET_KEY=devjwtsecret32charactersminimum!

# External APIs (OpenRouter)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-sonnet-4
FREEPIK_API_KEY=

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
